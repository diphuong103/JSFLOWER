<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm địa chỉ mới"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <EditText
            android:id="@+id/etAddressName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên địa chỉ (ví dụ: Nhà riêng, Cơ quan)"
            android:inputType="textPersonName"
            android:padding="12dp"
          />

        <EditText
            android:id="@+id/etAddressDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ chi tiết"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:layout_marginTop="12dp"
        />

        <EditText
            android:id="@+id/etReceiverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên người nhận"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            />

        <EditText
            android:id="@+id/etReceiverPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại người nhận"
            android:inputType="phone"
            android:padding="12dp"
            android:layout_marginTop="12dp"
           />

        <Button
            android:id="@+id/btnAddAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu địa chỉ"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
